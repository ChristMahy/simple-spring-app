<?xml version="1.0" encoding="UTF-8"?>
<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd"
>
    <modelVersion>4.0.0</modelVersion>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <groupId>cmahy.simple.spring.webapp</groupId>
    <artifactId>taco.shop.adapter.repository.cassandra</artifactId>
    <version>DEV-SNAPSHOT</version>

    <name>spring-taco-shop-adapter-repository-cassandra</name>
    <description>Webapp Taco Shop Adapter Repository Cassandra project</description>

    <packaging>jar</packaging>

    <parent>
        <groupId>cmahy.simple.spring</groupId>
        <artifactId>bom</artifactId>
        <version>1.0.6</version>
        <relativePath/>
    </parent>

    <properties>
        <cmahy.simple.spring.common>1.0.2</cmahy.simple.spring.common>

        <cmahy.simple.spring.webapp.taco.shop.version>1.0.2</cmahy.simple.spring.webapp.taco.shop.version>

        <cmahy.simple.spring.webapp.taco.shop.domain.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.domain.version>
        <cmahy.simple.spring.webapp.taco.shop.application.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.application.version>

        <cmahy.simple.spring.webapp.user.domain.version>1.0.5</cmahy.simple.spring.webapp.user.domain.version>
        <cmahy.simple.spring.webapp.user.cassandra.version>1.0.3</cmahy.simple.spring.webapp.user.cassandra.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>taco.shop.kernel.application</artifactId>
            <version>${cmahy.simple.spring.webapp.taco.shop.application.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>taco.shop.kernel.domain</artifactId>
            <version>${cmahy.simple.spring.webapp.taco.shop.domain.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>user.kernel.domain</artifactId>
            <version>${cmahy.simple.spring.webapp.user.domain.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp.user</groupId>
            <artifactId>adapter.repository.cassandra</artifactId>
            <version>${cmahy.simple.spring.webapp.user.cassandra.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework.data</groupId>
            <artifactId>spring-data-cassandra</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-autoconfigure</artifactId>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring</groupId>
            <artifactId>common</artifactId>
            <version>${cmahy.simple.spring.common}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>taco-shop-adapter-repository-cassandra-${project.version}</finalName>

        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/cassandra/config/**</exclude>
                        <exclude>**/cassandra/entity/domain/**</exclude>
                        <exclude>**/cassandra/repository/cassandra/**</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>cmahy.plugins</groupId>
                <artifactId>archunit</artifactId>

                <executions>
                    <execution>
                        <id>archunit-library</id>

                        <phase>post-integration-test</phase>

                        <goals>
                            <goal>arch</goal>
                        </goals>

                        <configuration>
                            <types>application,vo</types>

                            <archConfiguration>
                                <validators>
                                    <validator>
                                        <type>application</type>

                                        <active-packages>adapter</active-packages>

                                        <command>
                                            <active>false</active>
                                        </command>

                                        <query>
                                            <active>false</active>
                                        </query>
                                    </validator>
                                </validators>
                            </archConfiguration>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <pluginRepositories>
        <pluginRepository>
            <id>central</id>
            <url>https://repo1.maven.org/maven2</url>
        </pluginRepository>

        <pluginRepository>
            <id>github</id>
            <url>https://maven.pkg.github.com/ChristMahy/simple-spring-app</url>
        </pluginRepository>
    </pluginRepositories>

    <repositories>
        <repository>
            <id>central</id>
            <url>https://repo1.maven.org/maven2</url>
        </repository>

        <repository>
            <id>github</id>
            <url>https://maven.pkg.github.com/ChristMahy/simple-spring-app</url>
        </repository>
    </repositories>
</project>