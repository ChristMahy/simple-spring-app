        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd"
>
    <modelVersion>4.0.0</modelVersion>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <groupId>cmahy.simple.spring.webapp</groupId>
    <artifactId>${packaging.artifact-id}</artifactId>
    <version>DEV-SNAPSHOT</version>

    <name>spring-taco-resource-impl</name>
    <description>Webapp Taco Resource</description>

    <packaging>jar</packaging>

    <parent>
        <groupId>cmahy.simple.spring</groupId>
        <artifactId>bom</artifactId>
        <version>1.0.2</version>
        <relativePath/>
    </parent>

    <properties>
        <cmahy.simple.spring.common.version>1.0.1</cmahy.simple.spring.common.version>

        <cmahy.simple.spring.webapp.resource.version>1.0.1</cmahy.simple.spring.webapp.resource.version>

        <cmahy.simple.spring.webapp.resource.api.version>${cmahy.simple.spring.webapp.resource.version}</cmahy.simple.spring.webapp.resource.api.version>
        <cmahy.simple.spring.webapp.resource.ui.version>${cmahy.simple.spring.webapp.resource.version}</cmahy.simple.spring.webapp.resource.ui.version>

        <cmahy.simple.spring.webapp.taco.shop.version>1.0.1</cmahy.simple.spring.webapp.taco.shop.version>

        <cmahy.simple.spring.webapp.taco.shop.adapter.repository.jpa.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.adapter.repository.jpa.version>
        <cmahy.simple.spring.webapp.taco.shop.adapter.repository.cassandra.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.adapter.repository.cassandra.version>
        <cmahy.simple.spring.webapp.taco.shop.adapter.repository.webclient.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.adapter.repository.webclient.version>
        <cmahy.simple.spring.webapp.taco.shop.kernel.domain.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.kernel.domain.version>
        <cmahy.simple.spring.webapp.taco.shop.kernel.vo.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.kernel.vo.version>
        <cmahy.simple.spring.webapp.taco.shop.kernel.application.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.kernel.application.version>
        <cmahy.simple.spring.webapp.taco.shop.it.cassandra.version>${cmahy.simple.spring.webapp.taco.shop.version}</cmahy.simple.spring.webapp.taco.shop.it.cassandra.version>

        <cmahy.simple.spring.webapp.user.version>1.0.1</cmahy.simple.spring.webapp.user.version>

        <cmahy.simple.spring.webapp.user.kernel.domain.version>${cmahy.simple.spring.webapp.user.version}</cmahy.simple.spring.webapp.user.kernel.domain.version>
        <cmahy.simple.spring.webapp.user.kernel.vo.version>${cmahy.simple.spring.webapp.user.version}</cmahy.simple.spring.webapp.user.kernel.vo.version>
        <cmahy.simple.spring.webapp.user.kernel.application.version>${cmahy.simple.spring.webapp.user.version}</cmahy.simple.spring.webapp.user.kernel.application.version>
        <cmahy.simple.spring.webapp.user.adapter.jpa.version>${cmahy.simple.spring.webapp.user.version}</cmahy.simple.spring.webapp.user.adapter.jpa.version>
        <cmahy.simple.spring.webapp.user.adapter.cassandra.version>${cmahy.simple.spring.webapp.user.version}</cmahy.simple.spring.webapp.user.adapter.cassandra.version>

        <packaging.artifact-id>resource.impl</packaging.artifact-id>

        <start-class>cmahy.simple.spring.webapp.resource.impl.adapter.ResourceApplication</start-class>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>

            <dependencies>
                <dependency>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-actuator</artifactId>
                </dependency>

                <dependency>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-devtools</artifactId>
                    <scope>runtime</scope>
                    <optional>true</optional>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>h2</id>

            <dependencies>
                <dependency>
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <scope>runtime</scope>
                </dependency>
            </dependencies>

            <properties>
                <packaging.artifact-id>resource.impl.h2</packaging.artifact-id>
            </properties>

            <build>
                <finalName>spring-taco-resource-impl-h2-${project.version}</finalName>
            </build>
        </profile>

        <profile>
            <id>jpa</id>

            <dependencies>
                <dependency>
                    <groupId>cmahy.simple.spring.webapp</groupId>
                    <artifactId>taco.shop.adapter.repository.jpa</artifactId>
                    <version>${cmahy.simple.spring.webapp.taco.shop.adapter.repository.jpa.version}</version>
                </dependency>

                <dependency>
                    <groupId>cmahy.simple.spring.webapp.user</groupId>
                    <artifactId>adapter.repository.jpa</artifactId>
                    <version>${cmahy.simple.spring.webapp.user.adapter.jpa.version}</version>
                </dependency>

                <dependency>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-data-jpa</artifactId>
                </dependency>
            </dependencies>

            <properties>
                <maven-failsafe-plugin.aditional.arg-line>-Dspring.profiles.active=jpa,h2,webclient</maven-failsafe-plugin.aditional.arg-line>
            </properties>
        </profile>

        <profile>
            <id>cassandra</id>

            <dependencies>
                <dependency>
                    <groupId>cmahy.simple.spring.webapp</groupId>
                    <artifactId>taco.shop.adapter.repository.cassandra</artifactId>
                    <version>${cmahy.simple.spring.webapp.taco.shop.adapter.repository.cassandra.version}</version>
                </dependency>

                <dependency>
                    <groupId>cmahy.simple.spring.webapp.user</groupId>
                    <artifactId>adapter.repository.cassandra</artifactId>
                    <version>${cmahy.simple.spring.webapp.user.adapter.cassandra.version}</version>
                </dependency>

                <dependency>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-data-cassandra</artifactId>
                </dependency>

                <dependency>
                    <groupId>cmahy.simple.spring.webapp</groupId>
                    <artifactId>resource.integration.test.persistence.cassandra</artifactId>
                    <version>${cmahy.simple.spring.webapp.taco.shop.it.cassandra.version}</version>
                    <type>test-jar</type>
                    <scope>test</scope>
                </dependency>
            </dependencies>

            <properties>
                <maven-failsafe-plugin.aditional.arg-line>-Dspring.profiles.active=cassandra,webclient</maven-failsafe-plugin.aditional.arg-line>

                <packaging.artifact-id>resource.impl.cassandra</packaging.artifact-id>
            </properties>

            <build>
                <finalName>spring-taco-resource-impl-cassandra-${project.version}</finalName>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>cmahy.simple.spring</groupId>
            <artifactId>common</artifactId>
            <version>${cmahy.simple.spring.common.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>taco.shop.kernel.vo</artifactId>
            <version>${cmahy.simple.spring.webapp.taco.shop.kernel.vo.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>taco.shop.kernel.domain</artifactId>
            <version>${cmahy.simple.spring.webapp.taco.shop.kernel.domain.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>taco.shop.kernel.application</artifactId>
            <version>${cmahy.simple.spring.webapp.taco.shop.kernel.application.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>taco.shop.adapter.repository.webclient</artifactId>
            <version>${cmahy.simple.spring.webapp.taco.shop.adapter.repository.webclient.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>resource.api</artifactId>
            <version>${cmahy.simple.spring.webapp.resource.api.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>resource.ui</artifactId>
            <version>${cmahy.simple.spring.webapp.resource.ui.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>user.kernel.application</artifactId>
            <version>${cmahy.simple.spring.webapp.user.kernel.application.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>user.kernel.domain</artifactId>
            <version>${cmahy.simple.spring.webapp.user.kernel.domain.version}</version>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>user.kernel.vo</artifactId>
            <version>${cmahy.simple.spring.webapp.user.kernel.vo.version}</version>
        </dependency>

        <dependency>
            <groupId>jakarta.inject</groupId>
            <artifactId>jakarta.inject-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-thymeleaf</artifactId>
        </dependency>

        <!-- https://mvnrepository.com/artifact/nz.net.ultraq.thymeleaf/thymeleaf-layout-dialect -->
        <dependency>
            <groupId>nz.net.ultraq.thymeleaf</groupId>
            <artifactId>thymeleaf-layout-dialect</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-security</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-oauth2-client</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.security</groupId>
            <artifactId>spring-security-oauth2-jose</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-integration</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.integration</groupId>
            <artifactId>spring-integration-file</artifactId>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring</groupId>
            <artifactId>common</artifactId>
            <version>${cmahy.simple.spring.common.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>taco.shop.kernel.domain</artifactId>
            <version>${cmahy.simple.spring.webapp.taco.shop.kernel.domain.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>cmahy.simple.spring.webapp</groupId>
            <artifactId>user.kernel.domain</artifactId>
            <version>${cmahy.simple.spring.webapp.user.kernel.domain.version}</version>
